%head
  %meta{ :charset => "utf-8" }

  %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }

  %title= content_for?(:title) ? yield(:title) : "WednesdayShelf"

  = stylesheet_link_tag "application"
  = javascript_include_tag :modernizr
  = csrf_meta_tag

%body{class: body_classes}

  #bar
    .inner-bar-content
      =link_to root_path do
        #logo-container
          -if current_user
            = current_user.avatar
          -else
            = image_tag 'default.png'
      #header
        = content_for?(:header) ? yield(:header) : "WednesdayShelf"
      #sidebar-info
        = content_for?(:sidebar_info) ? yield(:sidebar_info) : ''
      #user-interaction
        = content_for?(:user_interaction) ? yield(:user_interaction) : ''

  #content

    = yield

  = javascript_include_tag "application"
